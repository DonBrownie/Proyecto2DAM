<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="es.cifpcarlos3.tarea401.controller.HomeContentController" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    
    <Label text="BIENVENIDO SEÑOR/A" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0288D1;"/>
    <Label text="¿Que vas a hacer hoy?" style="-fx-font-size: 16px; -fx-text-fill: #0288D1;"/>

    <GridPane styleClass="home-grid" alignment="CENTER" hgap="30" vgap="30">
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>

        <!-- Reservas: Key Icon -->
        <Button text="Reservas" onAction="#onReservasBtnClick" styleClass="dashboard-button" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <graphic>
                <SVGPath content="M12.65 10C11.83 7.67 9.61 6 7 6c-3.31 0-6 2.69-6 6s2.69 6 6 6c2.61 0 4.83-1.67 5.65-4H17v4h4v-4h2v-4H12.65zM7 14c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z" scaleX="2" scaleY="2" fill="#333333"/>
            </graphic>
        </Button>

        <!-- Nominas: Check/Document Icon -->
        <Button text="Nominas" onAction="#onNominasBtnClick" styleClass="dashboard-button" GridPane.columnIndex="1" GridPane.rowIndex="0">
             <graphic>
                <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" scaleX="2" scaleY="2" fill="#333333"/>
            </graphic>
        </Button>

        <!-- Calendario: Calendar Icon -->
        <Button text="Calendario" onAction="#onCalendarioBtnClick" styleClass="dashboard-button" GridPane.columnIndex="0" GridPane.rowIndex="1">
             <graphic>
                <SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" scaleX="2" scaleY="2" fill="#333333"/>
            </graphic>
        </Button>

        <!-- Perfil: User Icon -->
        <Button text="Perfil" onAction="#onPerfilBtnClick" styleClass="dashboard-button" GridPane.columnIndex="1" GridPane.rowIndex="1">
             <graphic>
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" scaleX="2" scaleY="2" fill="#333333"/>
            </graphic>
        </Button>

    </GridPane>
</VBox>
