<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="es.cifpcarlos3.tarea401.controller.LoginController" styleClass="root">
    <VBox alignment="CENTER" spacing="20.0" styleClass="login-container">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <Label text="Inicio de Sesión" styleClass="login-title"/>

        <StackPane>
            <Circle radius="35.0" fill="#0d1b2a" stroke="#29B6F6" strokeWidth="2" />
            <Label text="R" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </StackPane>

        <TextField fx:id="usernameField" promptText="Usuario" styleClass="login-field" alignment="CENTER"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="login-field" alignment="CENTER"/>

        <Button text="Iniciar Sesión" onAction="#onLoginButtonClick" styleClass="login-button"/>


    </VBox>
</StackPane>
