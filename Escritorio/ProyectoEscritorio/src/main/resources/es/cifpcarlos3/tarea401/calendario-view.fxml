<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="es.cifpcarlos3.tarea401.CalendarioController" styleClass="list-container" alignment="CENTER" spacing="30">
    

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <DatePicker fx:id="datePicker" promptText="Selecciona una fecha" />
    </VBox>

    <Button text="Mi Horario Semanal" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);"/>
</VBox>
