<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="es.cifpcarlos3.tarea401.controller.CalendarioController" styleClass="list-container" alignment="CENTER" spacing="20">
    
    <VBox fx:id="calendarContainer" alignment="CENTER" spacing="10" styleClass="calendar-card" maxWidth="600">
        <!-- Header: Nav buttons and Month Title -->
        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 10 0 20 0;">
            <Button text="◀" onAction="#onPreviousMonth" styleClass="calendar-nav-btn"/>
            <Label fx:id="monthYearLabel" text="MARZO 2024" styleClass="calendar-title" minWidth="200" alignment="CENTER"/>
            <Button text="▶" onAction="#onNextMonth" styleClass="calendar-nav-btn"/>
        </HBox>

        <!-- Grid for the month days -->
        <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10">
            <!-- Headers and days will be injected via Controller -->
        </GridPane>

        <!-- Legend -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
            <HBox alignment="CENTER" spacing="5">
                <VBox styleClass="legend-color, legend-white" />
                <Label text="Normal" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <VBox styleClass="legend-color, legend-orange" />
                <Label text="Turno" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <VBox styleClass="legend-color, legend-green" />
                <Label text="Libre" />
            </HBox>
        </HBox>
    </VBox>

</VBox>
