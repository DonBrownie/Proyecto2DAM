<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="es.cifpcarlos3.tarea401.controller.CuentaController" styleClass="list-container" alignment="CENTER" spacing="20">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3); -fx-max-width: 400;">
        
        <Label text="Configuración de Cuenta" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a4f8b;"/>
        
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nombre" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="nombreField" promptText="Ingrese su nombre" styleClass="input-field" style="-fx-pref-width: 300px;"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Primer Apellido" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="apellido1Field" promptText="Ingrese su primer apellido" styleClass="input-field" style="-fx-pref-width: 300px;"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Segundo Apellido" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="apellido2Field" promptText="Ingrese su segundo apellido" styleClass="input-field" style="-fx-pref-width: 300px;"/>
        </VBox>
        
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Número de Teléfono" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="telefonoField" promptText="Ingrese su nuevo número" styleClass="input-field" style="-fx-pref-width: 300px;"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nueva Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <PasswordField fx:id="passwordField" promptText="Ingrese su nueva contraseña" styleClass="input-field" style="-fx-pref-width: 300px;"/>
        </VBox>
        
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Button text="Cancelar" onAction="#onCancelClick" styleClass="secondary-button" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
            <Button text="Guardar" onAction="#onSaveClick" styleClass="primary-button" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
        
    </VBox>
</VBox>
