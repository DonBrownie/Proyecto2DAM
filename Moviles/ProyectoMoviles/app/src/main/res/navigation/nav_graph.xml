<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tarearetrofit.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tarearetrofit.fragments.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/reservasFragment"
        android:name="com.example.tarearetrofit.fragments.ReservasFragment"
        android:label="Reservas"
        tools:layout="@layout/fragment_reservas">
        <action
            android:id="@+id/action_reservasFragment_to_reservaDetailFragment"
            app:destination="@id/reservaDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/nominasFragment"
        android:name="com.example.tarearetrofit.fragments.NominasFragment"
        android:label="Nominas"
        tools:layout="@layout/fragment_nominas">
        <action
            android:id="@+id/action_nominasFragment_to_nominaDetailFragment"
            app:destination="@id/nominaDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarioFragment"
        android:name="com.example.tarearetrofit.fragments.CalendarioFragment"
        android:label="Calendario"
        tools:layout="@layout/fragment_calendario"/>

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.tarearetrofit.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">
        <action
            android:id="@+id/action_perfilFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.tarearetrofit.fragments.AccountFragment"
        android:label="Cuenta"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.tarearetrofit.fragments.SettingsFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/gestionFragment"
        android:name="com.example.tarearetrofit.fragments.GestionFragment"
        android:label="Gestión"
        tools:layout="@layout/fragment_gestion" />

    <fragment
        android:id="@+id/nominaDetailFragment"
        android:name="com.example.tarearetrofit.fragments.NominaDetailFragment"
        android:label="Detalle Nómina"
        tools:layout="@layout/fragment_nomina_detail" />

    <fragment
        android:id="@+id/reservaDetailFragment"
        android:name="com.example.tarearetrofit.fragments.ReservaDetailFragment"
        android:label="Detalle Reserva"
        tools:layout="@layout/fragment_reserva_detail" />

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

</navigation>