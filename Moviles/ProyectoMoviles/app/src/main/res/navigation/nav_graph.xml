<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tarearetrofit.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tarearetrofit.fragments.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/reservasFragment"
        android:name="com.example.tarearetrofit.fragments.ReservasFragment"
        android:label="Reservas"
        tools:layout="@layout/fragment_reservas"/>

    <fragment
        android:id="@+id/nominasFragment"
        android:name="com.example.tarearetrofit.fragments.NominasFragment"
        android:label="Nominas"
        tools:layout="@layout/fragment_nominas"/>

    <fragment
        android:id="@+id/calendarioFragment"
        android:name="com.example.tarearetrofit.fragments.CalendarioFragment"
        android:label="Calendario"
        tools:layout="@layout/fragment_calendario"/>

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.tarearetrofit.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil"/>

</navigation>