<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/header_view"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#64B5F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GESTIÓN GERENTE"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintEnd_toEndOf="@id/header_view"
        app:layout_constraintStart_toStartOf="@id/header_view"
        app:layout_constraintTop_toTopOf="@id/header_view" />

    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/header_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_tab_empleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUEVO EMPLEADO"
            android:backgroundTint="#039BE5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_tab_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="ALTA CLIENTE"
            android:backgroundTint="#FFFFFF"
            android:textColor="#039BE5" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nombre" android:textStyle="bold" />
                    <EditText android:id="@+id/et_nombre" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ej: Juan" android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Apellido 1" android:textStyle="bold" />
                    <EditText android:id="@+id/et_apellido1" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ej: Pérez" android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_puesto_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Puesto" android:textStyle="bold" />
                    <EditText android:id="@+id/et_puesto" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Gerente, Cocina..." android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DNI" android:textStyle="bold" />
                    <EditText android:id="@+id/et_dni" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="12345678X" android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Teléfono" android:textStyle="bold" />
                    <EditText android:id="@+id/et_telefono" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="600123456" android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_usuario_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView android:id="@+id/tv_usuario_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Usuario Acceso" android:textStyle="bold" />
                    <EditText android:id="@+id/et_usuario" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="jperez" android:background="@drawable/rounded_edittext" android:padding="12dp" />
                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:id="@+id/ll_password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Contraseña" android:textStyle="bold" />
                <EditText android:id="@+id/et_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="........" android:inputType="textPassword" android:background="@drawable/rounded_edittext" android:padding="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:text="CREAR EMPLEADO"
                android:backgroundTint="#039BE5"
                android:textColor="#FFFFFF"
                android:padding="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
